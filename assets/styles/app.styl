@import '_transition.styl'

:root
  --primary #1976D2
  --secondary #424242
  --accent #82B1FF
  --error #FF5252
  --info #2196F3
  --success #4CAF50
  --warning #FFC107

.swiper-container
  width 100%
  padding-bottom 150px
  background-repeat no-repeat
  background-size contain

.swiper-slide
  width 100%
  padding-left width1920(115)
  padding-right width1920(115)

.swiper-button-prev
  background-image url('~assets/images/project/pagination/left.png')
  width width1920(51)
  height width1920(100)
  background-size contain
  background-repeat no-repeat

  &:after
    content ''

.swiper-button-next
  background-image url('~assets/images/project/pagination/right.png')
  width width1920(51)
  height width1920(100)
  background-size contain
  background-repeat no-repeat

  &:after
    content ''

.swiper-pagination-bullet
  width 29px
  height 29px

.swiper-pagination-bullet-active
  background-color #707070

.swiper-container-horizontal > .swiper-pagination-bullets .swiper-pagination-bullet
  margin 0 20px

.more
  width width1920(200)
  display inline-block
  position absolute

  img
    width 100%
